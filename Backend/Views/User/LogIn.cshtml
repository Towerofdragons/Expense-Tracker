@{
    ViewData["Title"] = "Login";
}

<div class="login-page">
    <div class="login-container">
        <h2 class="login-title">Login</h2>
        <form class="login-form" method="post" asp-action="Login">
            <div class="form-field">
                <label for="email">Email</label>
                <input asp-for="Email" required type="email" id="email" class="form-input" placeholder="Enter your email" />
            </div>

            <div class="form-field">
                <label for="password">Password</label>
                <input asp-for="Password" required type="password" id="password" class="form-input" placeholder="Enter your password" />
            </div>
            <button type="submit" class="signup-button">Log In</button>

        </form>
        <div class="other-option">
            <p class="option-text"><span>Don't have an account?</span> <a asp-action="Register" class="option-link">Sign Up</a></p>
        </div>
    </div>

</div>
 @if (ViewData["ErrorMessage"] != null)
    {
        <p style="color: red;">@ViewData["ErrorMessage"]</p>
    }
