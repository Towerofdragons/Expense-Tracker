<form class="income-form" id="income-form">
    <div class="form-row">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="text" id="income-date" class="form-input" />
        </div>
        <div class="form-group">
            <label for="amount">Amount</label>
            <input type="text" id="income-amount" class="form-input" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="source">Source</label>
            <input type="text" id="income-source" class="form-input" />
        </div>
        <div class="form-group">
            <label for="notes">Notes</label>
            <input type="text" id="income-notes" class="form-input" />
        </div>
    </div>
    <button type="submit" class="add-button">Add Income</button>
</form>
